#!/bin/bash


API_URL="https://pokeapi.co/api/v2/pokemon/25/"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"


HTTP_STATUS=$(curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL")


if [ "$HTTP_STATUS" -eq 200 ]; then
  echo "Successfully retrieved data for Pikachu and saved to $OUTPUT_FILE"
else
  # If the request failed, log the error with a timestamp
  echo "$(date): Error retrieving data. HTTP status code: $HTTP_STATUS" >> "$ERROR_FILE"
  echo "Failed to retrieve data. See $ERROR_FILE for details."
fi