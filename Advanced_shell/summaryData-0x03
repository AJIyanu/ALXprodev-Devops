#!/bin/bash

OUTPUT_CSV="pokemon_report.csv"

rm -f "$OUTPUT_CSV"

echo "Name,Height (m),Weight (kg)" > "$OUTPUT_CSV"

TOTAL_HEIGHT=0
TOTAL_WEIGHT=0
COUNT=0

for file in *.json; do
  if [ -f "$file" ]; then
    NAME=$(jq -r '.name' "$file")
    HEIGHT_DECIMETER=$(jq -r '.height' "$file")
    WEIGHT_HECTOGRAM=$(jq -r '.weight' "$file")

    # Convert height from decimeters to meters and weight from hectograms to kilograms using awk
    HEIGHT_M=$(awk "BEGIN {printf \"%.1f\", $HEIGHT_DECIMETER / 10}")
    WEIGHT_KG=$(awk "BEGIN {printf \"%.1f\", $WEIGHT_HECTOGRAM / 10}")

    # Capitalize the first letter of the name using sed
    FORMATTED_NAME=$(echo "$NAME" | sed 's/^\(.\)/\U\1/')

    # Append the data to the CSV file
    echo "$FORMATTED_NAME,$HEIGHT_M,$WEIGHT_KG" >> "$OUTPUT_CSV"

    # Add to the total for average calculation
    TOTAL_HEIGHT=$(awk "BEGIN {print $TOTAL_HEIGHT + $HEIGHT_M}")
    TOTAL_WEIGHT=$(awk "BEGIN {print $TOTAL_WEIGHT + $WEIGHT_KG}")
    COUNT=$((COUNT + 1))
  fi
done

echo "CSV Report generated at: $OUTPUT_CSV"
echo ""

# Calculate and print the averages using awk
if [ "$COUNT" -gt 0 ]; then
  AVERAGE_HEIGHT=$(awk "BEGIN {printf \"%.2f\", $TOTAL_HEIGHT / $COUNT}")
  AVERAGE_WEIGHT=$(awk "BEGIN {printf \"%.2f\", $TOTAL_WEIGHT / $COUNT}")
  echo "Average Height: $AVERAGE_HEIGHT m"
  echo "Average Weight: $AVERAGE_WEIGHT kg"
else
  echo "No Pok√©mon JSON files found to process."
fi